<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LuasPersegi">

    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <EditText
            android:id="@+id/etpanjangsegitiga"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Masukkan Panjang"/>

        <EditText
            android:id="@+id/etalas"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Masukkan Alas "/>

    </LinearLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:layout_below="@id/ll"
        android:layout_marginTop="55dp"
        android:layout_centerHorizontal="true"
        android:text="Hitung"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:id="@+id/btnhtgseg"
        />
    <TextView
        android:id="@+id/tvhasilseg"
        android:layout_below="@id/btnhtgseg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:textSize="55dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>